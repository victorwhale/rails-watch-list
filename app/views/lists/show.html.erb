<div class="container my-5">
  <%= link_to lists_path, class: "btn btn-link text-decoration-none ps-0 mb-4" do %>
    <i class="fas fa-arrow-left me-2"></i>Back to lists
  <% end %>

  <div class="row">
    <div class="col-lg-8">
      <div class="mb-4 p-4 rounded-3" style="background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%); border-left: 5px solid #667eea;">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h1 class="mb-2 fw-bold" style="color: #667eea;">
              <i class="fas fa-list-ul me-2"></i><%= @list.name %>
            </h1>
            <p class="text-muted mb-0">
              <i class="fas fa-calendar-alt me-2"></i>Created <%= time_ago_in_words(@list.created_at) %> ago
            </p>
          </div>
          <div class="text-end">
            <div class="badge bg-primary fs-5 px-4 py-2" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;">
              <%= @list.bookmarks.count %>
            </div>
            <small class="d-block text-muted mt-1">movies</small>
          </div>
        </div>
      </div>

      <div class="card bookmark-form-inline mb-4 border-0 shadow-sm" style="border-radius: 16px;">
        <div class="card-body p-4">
          <h5 class="mb-3 fw-bold">
            <i class="fas fa-plus-circle me-2" style="color: #667eea;"></i>
            Add a movie to this list
          </h5>
          <%= form_with model: [@list, @bookmark], class: "" do |f| %>
            <div class="row g-3 align-items-end">
              <div class="col-md-5">
                <label class="form-label small text-muted mb-1">Select a movie</label>
                <%= f.collection_select :movie_id, @movies, :id, :title, { prompt: "Choose a movie..." }, { class: "form-select form-select-lg" } %>
              </div>
              <div class="col-md-5">
                <label class="form-label small text-muted mb-1">Your comment</label>
                <%= f.text_field :comment, class: "form-control form-control-lg", placeholder: "Why do you love this movie?" %>
              </div>
              <div class="col-md-2">
                <%= f.submit "Add", class: "btn btn-primary btn-lg w-100" %>
              </div>
            </div>
            <% if @bookmark.errors.any? %>
              <div class="alert alert-danger mt-3 mb-0 py-2">
                <i class="fas fa-exclamation-circle me-2"></i><%= @bookmark.errors.full_messages.join(", ") %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <% if @list.bookmarks.any? %>
        <h4 class="mb-3 fw-bold">
          <i class="fas fa-film me-2" style="color: #667eea;"></i>
          Your Movies
        </h4>
        <% @list.bookmarks.each_with_index do |bookmark, index| %>
          <div class="card movie-card mb-3 border-0 shadow-sm" style="border-radius: 16px; animation: fadeInUp <%= (index * 0.1) + 0.3 %>s ease;">
            <div class="card-body p-4">
              <div class="row">
                <% if bookmark.movie.poster_url %>
                  <div class="col-auto">
                    <%= image_tag bookmark.movie.poster_url, class: "rounded-3 shadow", style: "width: 120px; height: 180px; object-fit: cover;" %>
                  </div>
                <% end %>
                <div class="<%= bookmark.movie.poster_url ? 'col' : 'col-12' %>">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="flex-grow-1">
                      <h5 class="mb-2 fw-bold"><%= bookmark.movie.title %></h5>
                      <% if bookmark.movie.rating %>
                        <span class="badge bg-warning text-dark mb-2">
                          <i class="fas fa-star"></i> <%= bookmark.movie.rating %>/10
                        </span>
                      <% end %>
                    </div>
                    <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Remove this movie?" }, class: "btn btn-sm btn-outline-danger ms-3" do %>
                      <i class="fas fa-trash-alt"></i>
                    <% end %>
                  </div>
                  <p class="text-muted small mb-3"><%= bookmark.movie.overview %></p>
                  <% if bookmark.comment.present? %>
                    <div class="p-3 rounded-3" style="background: linear-gradient(135deg, #667eea10 0%, #764ba210 100%); border-left: 3px solid #667eea;">
                      <div class="d-flex align-items-start">
                        <i class="fas fa-quote-left text-primary me-2 mt-1"></i>
                        <em class="text-dark"><%= bookmark.comment %></em>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-5" style="animation: fadeInUp 0.8s ease;">
          <div class="mb-4">
            <i class="fas fa-film fa-4x" style="color: #667eea; opacity: 0.3;"></i>
          </div>
          <h4 class="fw-bold mb-2">No movies yet</h4>
          <p class="text-muted">Start building your collection by adding your first movie above!</p>
        </div>
      <% end %>
    </div>

    <div class="col-lg-4">
      <div class="position-sticky" style="top: 20px;">
        <div class="card border-0 shadow-sm mb-3" style="border-radius: 16px; overflow: hidden;">
          <%= image_tag @list.card_image_url, class: "card-img-top", alt: @list.name, style: "height: 350px; object-fit: cover;" %>
          <div class="card-body text-center p-4" style="background: linear-gradient(to bottom, #f8f9fa, white);">
            <h5 class="fw-bold mb-2"><%= @list.name %></h5>
            <p class="text-muted small mb-0">
              <i class="fas fa-video text-primary me-1"></i>
              <%= pluralize(@list.movies.count, 'movie') %> in this collection
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
