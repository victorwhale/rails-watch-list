<div class="hero-section">
  <div class="container">
    <h1>
      <i class="fas fa-popcorn"></i> My Watch Lists
    </h1>
    <p>Organize and curate your favorite movies in beautiful collections</p>
    <%= link_to new_list_path, class: "btn btn-light btn-lg px-5" do %>
      <i class="fas fa-plus-circle me-2"></i>Create a new list
    <% end %>
  </div>
</div>

<div class="container my-5 py-4">
  <% if @lists.any? %>
    <div class="mb-4">
      <h2 class="fw-bold">
        <span class="text-primary"><%= @lists.count %></span>
        <%= 'Collection'.pluralize(@lists.count) %>
      </h2>
      <p class="text-muted">Click on a list to view and manage your movies</p>
    </div>

    <div class="row g-4">
      <% @lists.each_with_index do |list, index| %>
        <div class="col-md-4" style="animation: fadeInUp <%= (index * 0.1) + 0.5 %>s ease;">
          <%= link_to list_path(list), class: "text-decoration-none" do %>
            <div class="card list-card h-100 border-0 shadow-sm">
              <div style="position: relative; overflow: hidden;">
                <%= image_tag list.card_image_url, class: "card-img-top", alt: list.name, style: "height: 280px; object-fit: cover;" %>
                <div style="position: absolute; top: 10px; right: 10px; z-index: 2;">
                  <span class="badge bg-dark bg-opacity-75">
                    <i class="fas fa-film me-1"></i><%= list.movies.count %>
                  </span>
                </div>
              </div>
              <div class="card-body">
                <h5 class="card-title text-dark mb-2 fw-bold"><%= list.name %></h5>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-muted small">
                    <i class="fas fa-video text-primary"></i> <%= pluralize(list.movies.count, 'movie') %>
                  </span>
                  <span class="text-primary view-arrow">
                    <i class="fas fa-arrow-right"></i>
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5" style="animation: fadeInUp 0.8s ease;">
      <div class="mb-4">
        <i class="fas fa-folder-open fa-5x" style="color: #667eea; opacity: 0.3;"></i>
      </div>
      <h3 class="fw-bold mb-3">Start Your Movie Collection</h3>
      <p class="text-muted fs-5 mb-4">Create lists to organize your favorite movies by genre, mood, or any theme you like!</p>
      <%= link_to new_list_path, class: "btn btn-primary btn-lg px-5" do %>
        <i class="fas fa-plus-circle me-2"></i>Create your first list
      <% end %>
    </div>
  <% end %>
</div>
