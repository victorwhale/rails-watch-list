<!DOCTYPE html>
<html>
  <head>
    <title>RailsWatchList</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: rgba(0,0,0,0.95); backdrop-filter: blur(10px);">
      <div class="container-fluid px-4">
        <a class="navbar-brand fw-bold" href="<%= root_path %>">
          <i class="fas fa-film me-2"></i>Watch Lists
        </a>
        <div class="d-flex gap-3">
          <%= link_to "My lists", lists_path, class: "nav-link text-white" %>
          <%= link_to "New list", new_list_path, class: "btn btn-success btn-sm" %>
        </div>
      </div>
    </nav>

    <div style="padding-top: 70px;">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show mx-3 mt-3" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show mx-3 mt-3" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
